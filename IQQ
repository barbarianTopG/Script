local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- Define the IQ test question and correct answer
local iqQuestion = "What is 5 + 3?"  -- Example question
local correctAnswer = "8"  -- Correct answer

-- Function to load the main script once the IQ test is passed
local function loadMainScript()
    local success, err = pcall(function()
        loadstring(game:HttpGet('https://raw.githubusercontent.com/checkurasshole/Script/refs/heads/main/Main%20Scripts'))()
    end)
    
    if not success then
        warn("Error loading script: " .. err)
    end
end

-- Function to kick the player if they fail the IQ test, with a brutal roast
local function kickPlayer()
    game.Players.LocalPlayer:Kick("Congrats on failing the most basic IQ test, you **oxygen-stealing**  clown ü§°. \n\nCouldn't answer 'What is 5 + 3?'‚Äînow you're a **breathing disappointment**. Every time you think, a brain cell commits suicide out of embarrassment. \n\nNASA just confirmed: you‚Äôre the reason aliens refuse to visit Earth.  \n\nYou tried to outsmart the system and instead proved why birth control exists. üö™ Now get the fuck out. üíÄ") 
end

-- GUI Setup
local Window = Rayfield:CreateWindow({
    Name = "ComboChronicle Vault | IQ Test Loader",
    LoadingTitle = "Loading ComboChronicle Vault ‚ùñ",
    LoadingSubtitle = "By COMBO_WICK | Bang.E.Line",
    Theme = "Ocean"
})

-- IQ Test Tab
local IQTestTab = Window:CreateTab("IQ Test", 4483362458)

-- Create the IQ test question input
IQTestTab:CreateInput({
    Name = "Answer the IQ Test",
    PlaceholderText = iqQuestion,
    RemoveTextAfterFocusLost = false,
    Callback = function(input)
        -- Check if the input matches the correct answer
        if input == correctAnswer then
            Rayfield:Destroy() -- Close the GUI
            print("Correct answer! Loading the script...")
            loadMainScript()  -- Load the main script
        else
            Rayfield:Notify({
                Title = "‚ùå Incorrect Answer",
                Content = "Are you seriously failing this? Get ready faggot.",
                Duration = 5,
                Image = 4483362458
            })
            wait(5)  -- Give some time for the notification to show before kicking
            kickPlayer()  -- Kick the player for failing the IQ test
        end
    end
})
