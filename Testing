local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local allowedGames = {
    [17045823120] = {"https://raw.githubusercontent.com/checkurasshole/Script/refs/heads/main/RP", "https://raw.githubusercontent.com/checkurasshole/Script/refs/heads/main/More%20better%20esp"}, -- Replace with actual Game ID
    [9876543210] = {"AnotherScript", "ExtraFeature"} -- Another game with different scripts
}

local keyRequired = "YourSecretKeyHere"

local scriptURLs = {
    ["StateOfAnarchy"] = "https://raw.githubusercontent.com/checkurasshole/Script/refs/heads/main/State%20Of%20Anarchy%20(In-Progress)",
    ["TeleportBehindPlayer"] = "https://raw.githubusercontent.com/checkurasshole/Script/refs/heads/main/Teleport%20Behind%20Player",
    ["AnotherScript"] = "https://raw.githubusercontent.com/example/example/main/AnotherScript.lua",
    ["ExtraFeature"] = "https://raw.githubusercontent.com/example/example/main/ExtraFeature.lua"
}

local function loadScripts(gameId)
    local scriptsToLoad = allowedGames[gameId]
    if scriptsToLoad then
        for _, scriptName in pairs(scriptsToLoad) do
            if scriptURLs[scriptName] then
                loadstring(game:HttpGet(scriptURLs[scriptName]))()
            end
        end
    end
end

-- **Check if Game ID is Allowed**
if not allowedGames[game.PlaceId] then
    game.Players.LocalPlayer:Kick("This script is not allowed in this game.")
    return
end

-- Rayfield GUI Setup
local Window = Rayfield:CreateWindow({
    Name = "ComboChronicle Vault | " .. table.concat(allowedGames[game.PlaceId], " & "),
    LoadingTitle = "Loading ComboChronicle Vault ‚ùñ",
    LoadingSubtitle = "By COMBO_WICK | Bang.E.Line",
    Theme = "Ocean"
})

-- Key and Credits Tab
local KeyTab = Window:CreateTab("Key & Credits", 4483362458)

-- Key Input Section
KeyTab:CreateInput({
    Name = "Enter Key",
    PlaceholderText = "Type the key here...",
    RemoveTextAfterFocusLost = false,
    Callback = function(input)
        if input == keyRequired then
            Rayfield:Destroy()
            loadScripts(game.PlaceId)
        else
            Rayfield:Notify({
                Title = "‚ùå Incorrect Key",
                Content = "Join the Discord to get the correct key!",
                Duration = 5,
                Image = 4483362458
            })
        end
    end
})

-- Button to Copy Discord/YouTube Links
KeyTab:CreateButton({
    Name = "üìã Copy Discord Link/YouTube",
    Callback = function()
        local links = "Discord: discord.com/invite/mwTHaCKzhw\nYouTube: https://www.youtube.com/@COMBO_WICK"
        setclipboard(links)
        Rayfield:Notify({
            Title = "‚úÖ Links Copied",
            Content = "Discord and YouTube links have been copied to your clipboard!",
            Duration = 5,
            Image = 4483362458
        })
    end,
})
